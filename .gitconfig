
[push]
    default = simple

[core]
    editor = vim

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    tree=log --graph --pretty=oneline --all --decorate
    treee=log --graph --pretty=oneline --decorate --no-merges

